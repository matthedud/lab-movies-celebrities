<h2>List of Movies</h2>
<ul>
  {{#each movies}}
    <li>
      <a href="/movies/{{_id}}">{{title}}</a>
      <a href="/movies/{{_id}}/edit">edit</a>
      <form action="/movies/{{_id}}/delete" method="post">
        <button type="submit">Delete</button>
      </form>
    </li>
  {{/each}}
</ul>
<a href="/movies/create">create Movie</a>