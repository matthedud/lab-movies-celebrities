<h2>Edit Movie</h2>
<form action="#" method="post">
  <label for="title">title</label>
  <input id="title" name="title" type="text" value="{{movie.title}}"/>
  <label for="genre">Genre</label>
  <input id="genre" name="genre" type="text"  value="{{movie.genre}}" />
  <label for="plot">Plot</label>
  <input id="plot" name="plot" type="text" value="{{movie.plot}}" />
  <label for="cast">Cast</label>
  <select name="cast" id="cast" multiple  value="{{movie.cast}}">
      {{#each celebrities}}
        <option value="{{_id}}">{{name}}</option>
      {{/each}}
  </select>
  <button type="submit">Create</button>
</form>